<h2>Posts list</h2>

<div class="row show-grid">
  <div class="col-md-1">id</div>
  <div class="col-md-2">title</div>
  <div class="col-md-4">content</div>
  <div class="col-md-1">comments</div>
  <div class="col-md-2">create date</div>
  <div class="col-md-2">actions</div>
</div>

<% @post.each do |p| %>
  <div class="row show-grid">
    <div class="col-md-1"><%= p.id %></div>
    <div class="col-md-2"><%= p.title %></div>
    <div class="col-md-4"><%= p.content[0,80]%></div>
    <div class="col-md-1"><%= p.comments.count %></div>
    <div class="col-md-2"><%= p.created_at.to_formatted_s(:db)  %></div>
    <div class="col-md-2">
      <%= link_to "view", admin_post_path(p) %>
      <%= link_to "edit", edit_admin_post_path(p) %>
      <%= link_to "delete", admin_post_path(p), method: :delete, data: { confirm:'Do you want to delete this  ?' } %>
    </div>
  </div>
<% end %>
<%= paginate @post %>
