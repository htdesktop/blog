<h1>Admin login page</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(:user, url:admin_sessions_path) do |f| %>
      
      <%= f.input :name, placeholder: 'Your name please' %>

      <%= f.input :password, placeholder: 'user@domain.com' %>

      <%= f.button :submit, "Login", class: "btn btn-primary" %>
      
    <% end %>
  </div>