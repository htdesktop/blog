<%= simple_form_for([:admin, @user]) do |f| %>
  
<div class="row">
  
  <div class="col-md-6 col-md-offset-3">

      <%= f.input :name %>

      <%= f.input :email %>

      <%= f.input :password %>


      <%= f.button :submit, "Update post", class: "btn btn-primary" %>
  </div>

</div>

<% end %>