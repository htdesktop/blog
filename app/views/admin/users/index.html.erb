<h2>User list</h2>

<div class="row show-grid">
  <div class="col-md-1">id</div>
  <div class="col-md-2">name</div>
  <div class="col-md-2">email</div>
  <div class="col-md-1">posts</div>
  <div class="col-md-2">comments</div>
  <div class="col-md-2">create date</div>
  <div class="col-md-2">actions</div>
</div>

<% @users.each do |p| %>
  <div class="row show-grid">
    <div class="col-md-1"><%= p.id %></div>
    <div class="col-md-2"><%= p.name %></div>
    <div class="col-md-2"><%= p.email %></div>
    <div class="col-md-1"><%= p.posts.count %></div>
    <div class="col-md-2"><%= p.comments.count %></div>
    <div class="col-md-2"><%= p.created_at.to_formatted_s(:db)  %></div>
    <div class="col-md-2">
      <%= link_to "view", admin_user_path(p) %>
      <%= link_to "edit", edit_admin_user_path(p) %>
      <%= link_to "delete", admin_user_path(p), method: :delete, data: { confirm:'Do you want to delete this  ?' } %>
    </div>
  </div>
<% end %>
<%= paginate @users %>
