<h1>show post content</h1>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<% if can? :update, @post%>
  <%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<% if can? :destroy, @post %>
  <%= link_to 'Delete', post_path, method: :delete %> |
<% end %>
<%= link_to 'Back', posts_path %> |

<% if can? :create, Comment %>
  <%= link_to 'Comment', new_comment_path(:post_id => @post.id) %>
<% end %>