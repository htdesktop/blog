<h1>Sign in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(:user, url: sessions_path) do |f| %>
      
      <%= f.input :email, placeholder: 'user.domain.com' %>

      <%= f.input :password %>

      <%= f.button :submit, class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
