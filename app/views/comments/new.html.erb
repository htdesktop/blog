
<h1>Post content/comment</h1>
<div class="center">
  <h2><%= @post.content %></h2>
</div>

 <div class="row" id='comment_div'>
    <%  @comments_list.each do |cc| %>
      <div class="col-md-6 col-md-offset-3">
        Comment: <%= link_to cc.title, post_comment_path({ :id => cc.id }) %>
      </div>
    <% end %>
  </div>
 

<div class="row" id='form_div'>
  
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for([@post, @comment], :remote => true, authenticity_token: true) do |f| %>

        <%= f.input :title %>

        <%= f.input :content, :as => :kindeditor %>

        <%= f.simple_fields_for :image, @comment.image do |image_fields| %>  
          <%= image_fields.input :path %>  
        <% end %>

        <%= f.button :submit, "Create new comments", class: "btn btn-primary" %>
      
      <% end %>

    </div>

  </div>