
    <% if @comment.errors.count == 0 %>  
     $("#errorlabel").remove();
      $('#comment_div').append('<div class=\'col-md-6 col-md-offset-3\'>Comment:<%= link_to @comment.title, post_comment_path({ :id => @comment.id }) %> </div>'); 
    <% else %>
     $("#form_div").append('<div class=\'col-md-6 col-md-offset-3\' id=\'errorlabel\'>Update failed</div>');
     $("#errorlabel").css({
       color: 'red'
     });
    <% end %> 