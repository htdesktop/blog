<h1>show comment content</h1>
<p>
  <strong>Title:</strong>
  <%= @comment.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @comment.content %>
</p>

<%= link_to 'Edit', edit_post_comment_path({ :id => @comment.id }), 'data-no-turbolink' => true %> |
<%= link_to 'Delete', [@comment.post, @comment], method: :delete, data: { confirm: 'Are you sure?' }  %> |
<%= link_to 'Back', new_post_comment_path(:post_id => @comment.post_id),'data-no-turbolink' => true %> 