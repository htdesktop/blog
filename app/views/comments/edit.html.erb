<%= simple_form_for(:comment, url: post_comment_path, :method => 'put') do |f| %>
  
<div class="row">
  
  <div class="col-md-6 col-md-offset-3">
     
      <%= f.input :title %>

      <%= f.input :content, :as => :kindeditor %>

      <%= f.button :submit, "Update comment", class: "btn btn-primary" %>
  </div>

</div>

<% end %>